<%= form_with model: attachable.attachments.build, url: [attachable, :attachments], id: "attachment_form_#{attachable.id}" do |f| %>
  <div class="flex items-center gap-2 mt-2">
    <label for="<%= "attachment_file_#{attachable.id}" %>" class="flex items-center gap-2 px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg cursor-pointer text-sm text-gray-300 transition-colors">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
      </svg>
      Attach File
    </label>
    <input type="file" id="<%= "attachment_file_#{attachable.id}" %>" name="attachment[file]" class="hidden" multiple>
    <input type="hidden" name="attachment[name]" value="<%= File.basename(params[:attachment]&.[](:file)&.original_filename) if params[:attachment] %>">
  </div>
<% end %>

<% if attachable.attachments.any? %>
  <div class="mt-3 space-y-2">
    <% attachable.attachments.each do |attachment| %>
      <div id="<%= "attachment_#{attachment.id}" %>" class="flex items-center gap-3 p-2 bg-gray-700 rounded-lg">
        <% if attachment.image? %>
          <%= image_tag attachment.file_url, class: "w-8 h-8 object-cover rounded", alt: attachment.name %>
        <% elsif attachment.video? %>
          <div class="w-8 h-8 bg-blue-600 rounded flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
        <% else %>
          <div class="w-8 h-8 bg-gray-600 rounded flex items-center justify-center">
            <svg class="w-4 h-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        <% end %>

        <div class="flex-1 min-w-0">
          <a href="<%= attachment.file_url %>" target="_blank" class="text-sm text-purple-400 hover:text-purple-300 truncate block">
            <%= attachment.name %>
          </a>
          <div class="text-xs text-gray-500">
            <%= number_to_human_size(attachment.file_size) %> â€¢ <%= attachment.content_type %>
          </div>
        </div>

        <%= button_to [attachable, attachment], method: :delete, class: "text-gray-400 hover:text-red-400 p-1", form: { data: { turbo_confirm: "Delete '#{attachment.name}'?" } } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<script>
  // Handle file selection
  document.getElementById('<%= "attachment_file_#{attachable.id}" %>').addEventListener('change', function(e) {
    const files = e.target.files;
    if (files.length > 0) {
      // Auto-submit the form when files are selected
      const form = e.target.closest('form');
      form.requestSubmit();
    }
  });
</script>