<%= turbo_frame_tag "remember_modal" do %>
  <div data-remember-target="modal" class="hidden fixed inset-0 z-50">
    <div class="absolute inset-0 bg-black/60" data-action="click->remember#close"></div>

    <div class="absolute inset-x-0 bottom-0 sm:inset-0 sm:flex sm:items-center sm:justify-center p-3">
      <div class="w-full sm:max-w-xl bg-gray-800 border border-gray-700 rounded-2xl shadow-2xl overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-700 flex items-center justify-between">
          <div>
            <div class="text-sm font-semibold text-gray-100">Remember</div>
            <div class="text-xs text-gray-500">Save durable info (keep it compact).</div>
          </div>
          <button type="button" class="text-gray-400 hover:text-gray-200" data-action="remember#close">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="p-4 space-y-3">
          <%= form_with url: knowledge_remember_path, method: :post, data: { turbo: true }, class: "space-y-3" do %>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-2">
              <div class="sm:col-span-1">
                <label class="block text-xs text-gray-400 mb-1">Save to</label>
                <select name="destination" data-remember-target="destination" data-action="change->remember#destinationChanged" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-sm text-gray-100">
                  <option value="user">USER.md (preferences)</option>
                  <option value="memory">MEMORY.md (long-term)</option>
                  <option value="topic">New topic note</option>
                </select>
              </div>
              <div class="sm:col-span-2">
                <label class="block text-xs text-gray-400 mb-1">Title (optional)</label>
                <input name="title" data-remember-target="title" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-sm text-gray-100 placeholder-gray-400" placeholder="Short label / topic title" />
              </div>
            </div>

            <div>
              <label class="block text-xs text-gray-400 mb-1">Content</label>
              <textarea name="content" data-remember-target="content" rows="6" class="w-full bg-gray-900 border border-gray-700 rounded-lg p-3 text-sm text-gray-100 textarea-scroll" placeholder="What should be remembered?"></textarea>
            </div>

            <div data-remember-target="topicFields" class="hidden grid grid-cols-1 sm:grid-cols-3 gap-2">
              <div>
                <label class="block text-xs text-gray-400 mb-1">Tags</label>
                <input name="tags" data-remember-target="tags" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-sm text-gray-100" placeholder="rails hotwire" />
              </div>
              <div>
                <label class="block text-xs text-gray-400 mb-1">Version</label>
                <input name="version" data-remember-target="version" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-sm text-gray-100" placeholder="optional" />
              </div>
              <div>
                <label class="block text-xs text-gray-400 mb-1">Source URL</label>
                <input name="source" data-remember-target="source" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-sm text-gray-100" placeholder="optional" />
              </div>
            </div>

            <div class="flex items-center justify-end gap-2 pt-1">
              <button type="button" data-action="remember#close" class="bg-gray-700 hover:bg-gray-600 text-gray-100 px-4 py-2 rounded-lg text-sm">Cancel</button>
              <button class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm">Save</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
