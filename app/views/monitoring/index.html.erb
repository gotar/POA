<% content_for :title, "System Monitoring - Gotar Bot" %>

<div class="min-h-screen flex flex-col">
  <header class="bg-gray-800 border-b border-gray-700 px-4 py-3">
    <div class="flex items-center gap-3">
      <%= link_to projects_path, class: "text-gray-400 hover:text-gray-200" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <h1 class="text-xl font-bold text-gray-100">System Monitoring</h1>
    </div>
  </header>

  <main class="flex-1 overflow-y-auto p-4">
    <div class="max-w-6xl mx-auto space-y-6">
      <!-- Heartbeat -->
      <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
        <div class="flex items-start justify-between gap-4">
          <h2 class="text-lg font-semibold text-gray-100">Heartbeat</h2>
          <div class="text-xs text-gray-400 text-right">
            <div>Last run: <%= @heartbeat_last_run_at ? "#{time_ago_in_words(@heartbeat_last_run_at)} ago" : "â€”" %></div>
            <div>Status: <span class="text-gray-200"><%= @heartbeat_last_status.presence || "â€”" %></span></div>
            <% if @heartbeat_last_duration_ms.to_i > 0 %>
              <div>Duration: <span class="text-gray-200"><%= @heartbeat_last_duration_ms %>ms</span></div>
            <% end %>
          </div>
        </div>

        <div class="mt-4 flex items-center gap-2">
          <%= button_to "Run heartbeat now", monitoring_run_heartbeat_path, method: :post,
                class: "bg-gray-700 hover:bg-gray-600 text-gray-100 px-3 py-2 rounded-lg text-sm",
                form: { data: { turbo: true } } %>
          <%= button_to "Run polish now", monitoring_run_polish_path, method: :post,
                class: "bg-purple-600 hover:bg-purple-700 text-white px-3 py-2 rounded-lg text-sm",
                form: { data: { turbo: true } } %>
        </div>

        <div class="mt-4 bg-gray-900/30 border border-gray-700 rounded-lg p-4">
          <div class="text-sm font-medium text-gray-200 mb-2">Heartbeat settings</div>
          <%= form_with url: monitoring_heartbeat_settings_path, method: :post, data: { turbo: true }, class: "space-y-2" do %>
            <label class="flex items-center gap-2 text-sm text-gray-300">
              <%= check_box_tag :agent_enabled, "1", @heartbeat_agent_enabled, class: "rounded" %>
              <span>Enable agent heartbeat (LLM)</span>
            </label>

            <label class="flex items-center gap-2 text-sm text-gray-300">
              <%= check_box_tag :agent_skip_when_busy, "1", @heartbeat_agent_skip_when_busy, class: "rounded" %>
              <span>Skip agent heartbeat when chats are running</span>
            </label>

            <label class="flex items-center gap-2 text-sm text-gray-300">
              <%= check_box_tag :push_alerts_enabled, "1", @heartbeat_push_alerts_enabled, class: "rounded" %>
              <span>Send push alerts when heartbeat finds issues</span>
            </label>

            <div class="pt-1">
              <%= submit_tag "Save settings", class: "bg-gray-700 hover:bg-gray-600 text-gray-100 px-3 py-2 rounded-lg text-sm" %>
            </div>
          <% end %>

          <div class="mt-2 text-xs text-gray-500">
            Agent heartbeat only runs when <code class="text-gray-300">HEARTBEAT.md</code> has actionable tasks (otherwise it stays silent).
          </div>
        </div>

        <% if @heartbeat_last_alerts.present? %>
          <div class="mt-4 space-y-2">
            <% @heartbeat_last_alerts.first(6).each do |a| %>
              <div class="text-sm text-gray-300 bg-gray-900/40 border border-gray-700 rounded-lg px-3 py-2"><%= a %></div>
            <% end %>
          </div>
        <% else %>
          <div class="mt-4 text-sm text-gray-500">No alerts.</div>
        <% end %>

        <div class="mt-4 text-xs text-gray-500 space-y-1">
          <div>
            Personal knowledge polish: <%= @polish_last_run_at ? "#{time_ago_in_words(@polish_last_run_at)} ago" : "â€”" %> (<%= @polish_last_status.presence || "â€”" %>)
          </div>
          <div>
            Agent heartbeat: <%= @agent_heartbeat_last_run_at ? "#{time_ago_in_words(@agent_heartbeat_last_run_at)} ago" : "â€”" %> (<%= @agent_heartbeat_last_status.presence || "â€”" %>)
            <% if @agent_heartbeat_last_provider.present? && @agent_heartbeat_last_model.present? %>
              <span class="text-gray-400">â€” <%= @agent_heartbeat_last_provider %>/<%= @agent_heartbeat_last_model %></span>
            <% end %>
          </div>
          <% if @agent_heartbeat_last_message.present? %>
            <div class="text-gray-300">Last agent message: <%= @agent_heartbeat_last_message %></div>
          <% end %>
          <% if @agent_heartbeat_last_error.present? %>
            <div class="text-red-300">Last agent error: <%= @agent_heartbeat_last_error %></div>
          <% end %>
        </div>
      </div>

      <!-- Heartbeat History -->
      <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
        <div class="flex items-start justify-between gap-4">
          <h2 class="text-lg font-semibold text-gray-100">Heartbeat history</h2>
          <div class="text-xs text-gray-400">Last 50 runs</div>
        </div>

        <% if @heartbeat_events.present? %>
          <div class="mt-4 overflow-x-auto">
            <table class="min-w-full text-sm">
              <thead>
                <tr class="text-left text-gray-400">
                  <th class="py-2 pr-4">Time</th>
                  <th class="py-2 pr-4">Status</th>
                  <th class="py-2 pr-4">Agent</th>
                  <th class="py-2 pr-4">Notes</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-700">
                <% @heartbeat_events.each do |ev| %>
                  <% status = ev.status.to_s %>
                  <% badge = case status
                             when "ok" then "bg-green-900/30 text-green-200 border border-green-700"
                             when "alert" then "bg-yellow-900/30 text-yellow-200 border border-yellow-700"
                             when "error" then "bg-red-900/30 text-red-200 border border-red-700"
                             else "bg-gray-900/30 text-gray-200 border border-gray-700"
                             end %>
                  <tr>
                    <td class="py-2 pr-4 text-xs text-gray-400 font-mono whitespace-nowrap"><%= ev.started_at&.strftime("%Y-%m-%d %H:%M") || "â€”" %></td>
                    <td class="py-2 pr-4">
                      <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs <%= badge %>"><%= status.presence || "â€”" %></span>
                      <% if ev.duration_ms.to_i > 0 %>
                        <span class="ml-2 text-xs text-gray-500"><%= ev.duration_ms %>ms</span>
                      <% end %>
                    </td>
                    <td class="py-2 pr-4 text-xs text-gray-300">
                      <% if ev.agent_status.present? %>
                        <span class="font-mono"><%= ev.agent_status %></span>
                      <% else %>
                        â€”
                      <% end %>
                      <% if ev.agent_provider.present? && ev.agent_model.present? %>
                        <span class="text-gray-400">(<%= ev.agent_provider %>/<%= ev.agent_model %>)</span>
                      <% end %>
                    </td>
                    <td class="py-2 pr-4 text-xs text-gray-300">
                      <% if ev.alerts.any? %>
                        <span class="text-gray-200"><%= ev.alerts.first.to_s.truncate(120) %></span>
                      <% elsif ev.agent_message.present? %>
                        <span class="text-gray-200"><%= ev.agent_message.to_s.truncate(120) %></span>
                      <% elsif ev.agent_error.present? %>
                        <span class="text-red-300"><%= ev.agent_error.to_s.truncate(120) %></span>
                      <% else %>
                        <span class="text-gray-500">â€”</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="mt-4 text-sm text-gray-500">No heartbeat history yet (run a heartbeat after migrating).</div>
        <% end %>
      </div>

      <!-- Job Status Overview -->
      <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
        <div class="flex items-start justify-between gap-4">
          <h2 class="text-lg font-semibold text-gray-100">Job Queue Status</h2>
          <div class="text-xs text-gray-400 text-right">
            <div>Scheduler tick: <%= @scheduler_last_tick_at ? "#{time_ago_in_words(@scheduler_last_tick_at)} ago" : "â€”" %></div>
            <div>Last enqueue: <%= @scheduler_last_enqueue_at ? "#{time_ago_in_words(@scheduler_last_enqueue_at)} ago" : "â€”" %></div>
            <div>Enqueued count: <span class="text-gray-200"><%= @scheduler_enqueued_count %></span></div>
          </div>
        </div>

        <div class="mt-4">

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="bg-gray-700 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-blue-400"><%= @jobs_by_status["pending"] || 0 %></div>
            <div class="text-sm text-gray-400">Pending</div>
          </div>
          <div class="bg-gray-700 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-yellow-400"><%= @jobs_by_status["running"] || 0 %></div>
            <div class="text-sm text-gray-400">Running</div>
          </div>
          <div class="bg-gray-700 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-green-400"><%= @jobs_by_status["completed"] || 0 %></div>
            <div class="text-sm text-gray-400">Completed</div>
          </div>
          <div class="bg-gray-700 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-red-400"><%= @failed_jobs_count %></div>
            <div class="text-sm text-gray-400">Failed</div>
          </div>
        </div>

        <div class="mt-4">
          <%= link_to "View All Jobs", monitoring_jobs_path, class: "text-purple-400 hover:text-purple-300 text-sm" %>
        </div>
      </div>

      <!-- Recent Jobs -->
      <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
        <h2 class="text-lg font-semibold text-gray-100 mb-4">Recent Jobs</h2>

        <div class="space-y-3">
          <% @recent_jobs.each do |job| %>
            <div class="flex items-center justify-between p-3 bg-gray-700 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="<%= job_status_color(job.status) %> w-3 h-3 rounded-full"></div>
                <div>
                  <div class="text-sm font-medium text-gray-200"><%= job.class_name %></div>
                  <div class="text-xs text-gray-500"><%= time_ago_in_words(job.created_at) %> ago</div>
                </div>
              </div>
              <div class="text-xs text-gray-400">
                <%= job.status&.titleize || "Unknown" %>
              </div>
            </div>
          <% end %>

          <% if @recent_jobs.empty? %>
            <div class="text-center py-8">
              <p class="text-gray-500">No jobs have been executed yet</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Scheduled Jobs -->
      <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
        <h2 class="text-lg font-semibold text-gray-100 mb-4">Scheduled Jobs</h2>

        <div class="space-y-3">
          <% @scheduled_jobs.each do |job| %>
            <div class="flex items-center justify-between p-3 bg-gray-700 rounded-lg">
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <h4 class="font-medium text-gray-200 truncate">
                    <%= link_to [job.project, job], class: "hover:text-purple-400" do %>
                      <%= job.name %>
                    <% end %>
                  </h4>
                  <span class="<%= job.active? ? 'bg-green-900 text-green-200' : 'bg-gray-900 text-gray-400' %> px-2 py-1 text-xs rounded-full">
                    <%= job.active? ? 'Active' : 'Inactive' %>
                  </span>
                </div>
                <div class="text-xs text-gray-500">
                  <%= job.project.name %> Â· <%= job.cron_expression %>
                  <% if job.next_run_at %>
                    Â· Next: <%= time_ago_in_words(job.next_run_at) %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <% if @scheduled_jobs.empty? %>
            <div class="text-center py-8">
              <p class="text-gray-500">No scheduled jobs configured</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Project Overview -->
      <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
        <h2 class="text-lg font-semibold text-gray-100 mb-4">Projects Overview</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @projects.each do |project| %>
            <div class="bg-gray-700 rounded-lg p-4">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-8 h-8 rounded-lg flex items-center justify-center text-lg" style="background-color: <%= project.color %>20">
                  <%= project.icon || 'ðŸ“' %>
                </div>
                <div>
                  <h3 class="font-medium text-gray-200"><%= project.name %></h3>
                </div>
              </div>

              <div class="space-y-1 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-400">Conversations:</span>
                  <span class="text-gray-200"><%= project.conversations.count %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-400">Active TODOs:</span>
                  <span class="text-gray-200"><%= project.active_todos.count %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-400">Scheduled Jobs:</span>
                  <span class="text-gray-200"><%= project.scheduled_jobs.active.count %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
