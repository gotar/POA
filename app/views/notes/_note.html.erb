<div id="<%= dom_id(note) %>" class="bg-gray-750 border border-gray-700 rounded-xl p-4">
  <div class="flex items-start justify-between gap-4">
    <div class="min-w-0">
      <div class="font-medium text-gray-100 truncate"><%= note.title %></div>
      <div class="text-xs text-gray-500 mt-1"><%= note.category.to_s.titleize %> Â· updated <%= time_ago_in_words(note.updated_at) %> ago</div>
      <div class="text-sm text-gray-300 mt-2 line-clamp-2"><%= note.content %></div>
    </div>

    <div class="flex items-center gap-2 flex-shrink-0">
      <%= link_to "Open", [project, note], class: "text-xs text-purple-300 hover:text-purple-200" %>
      <%= link_to "Edit", edit_project_note_path(project, note), class: "text-xs text-gray-400 hover:text-gray-200" %>
      <%= button_to "Delete", project_note_path(project, note), method: :delete, class: "text-xs text-red-400 hover:text-red-300", form: { data: { turbo_confirm: "Delete this note?" } } %>
    </div>
  </div>
</div>
