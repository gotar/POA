<% content_for :title, "#{@note.title} - #{@project.name}" %>

<div class="min-h-screen flex flex-col">
  <header class="bg-gray-800 border-b border-gray-700 px-4 py-3 flex items-center gap-3 sticky top-0 z-10">
    <%= link_to project_notes_path(@project), class: "text-gray-400 hover:text-gray-200" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <div class="min-w-0">
      <h1 class="text-xl font-bold text-gray-100 truncate"><%= @note.title %></h1>
      <p class="text-xs text-gray-500"><%= @project.name %> Â· <%= @note.category.to_s.titleize %></p>
    </div>
    <div class="ml-auto flex items-center gap-2">
      <%= link_to "Edit", edit_project_note_path(@project, @note), class: "bg-gray-700 hover:bg-gray-600 text-gray-100 px-3 py-2 rounded-lg text-sm" %>
      <%= button_to "Delete", project_note_path(@project, @note), method: :delete, class: "bg-red-700 hover:bg-red-600 text-white px-3 py-2 rounded-lg text-sm", form: { data: { turbo_confirm: "Delete this note?" } } %>
    </div>
  </header>

  <main class="flex-1 overflow-y-auto p-4">
    <div class="max-w-3xl mx-auto">
      <div class="bg-gray-800 border border-gray-700 rounded-xl p-5" data-remember-container data-remember-role="assistant" data-remember-destination="memory">
        <div class="flex items-center justify-between gap-3 mb-3">
          <div class="text-xs text-gray-500">Updated <%= time_ago_in_words(@note.updated_at) %> ago</div>
          <button type="button" data-action="remember#open" class="text-xs text-purple-200/90 hover:text-white underline underline-offset-2">Remember</button>
        </div>
        <div class="prose prose-invert max-w-none">
          <%= simple_format(h(@note.content)) %>
        </div>
      </div>
    </div>
  </main>
</div>
