<% content_for :title, "#{@meta[:title]} - Personal Knowledge" %>

<div class="min-h-screen flex flex-col">
  <header class="bg-gray-800 border-b border-gray-700 px-4 py-3 flex items-center gap-3 sticky top-0 z-10">
    <%= link_to project_personal_knowledge_path(@project), class: "text-gray-400 hover:text-gray-200" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>

    <div class="min-w-0">
      <h1 class="text-xl font-bold text-gray-100 truncate"><%= @meta[:title] %></h1>
      <p class="text-xs text-gray-500 truncate"><%= @path %></p>
    </div>

    <div class="ml-auto flex items-center gap-2">
      <%= link_to "Edit", project_personal_knowledge_edit_note_path(@project, path: @path), class: "bg-gray-700 hover:bg-gray-600 text-gray-100 px-3 py-2 rounded-lg text-sm" %>
    </div>
  </header>

  <main class="flex-1 overflow-y-auto p-4">
    <div class="max-w-3xl mx-auto">
      <div class="bg-gray-800 border border-gray-700 rounded-xl p-5" data-controller="syntax-highlight">
        <div class="prose prose-invert max-w-none">
          <%= markdown(@content) %>
        </div>
      </div>
    </div>
  </main>
</div>
