<% content_for :title, "#{@scheduled_job.name} - Scheduled Jobs" %>

<div class="min-h-screen flex flex-col">
  <header class="bg-gray-800 border-b border-gray-700 px-4 py-3 flex items-center gap-3">
    <%= link_to project_scheduled_jobs_path(@project), class: "text-gray-400 hover:text-gray-200" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <div class="flex-1 min-w-0">
      <h1 class="font-medium text-gray-100 truncate"><%= @scheduled_job.name %></h1>
      <p class="text-xs text-gray-500">
        <%= @project.name %> · Scheduled Job · <%= @scheduled_job.status&.titleize || "Pending" %>
      </p>
    </div>

    <div class="flex gap-2">
      <%= link_to "Edit", edit_project_scheduled_job_path(@project, @scheduled_job), class: "bg-gray-700 hover:bg-gray-600 text-gray-200 px-3 py-1 rounded text-sm" %>
      <%= button_to "Run Now", run_now_project_scheduled_job_path(@project, @scheduled_job), method: :post, class: "bg-blue-600 hover:bg-blue-700 text-blue-200 px-3 py-1 rounded text-sm" %>
      <%= button_to "Delete", project_scheduled_job_path(@project, @scheduled_job), method: :delete, class: "bg-red-700 hover:bg-red-600 text-red-200 px-3 py-1 rounded text-sm", form: { data: { turbo_confirm: "Delete this scheduled job?" } } %>
    </div>
  </header>

  <main class="flex-1 overflow-y-auto p-4">
    <div class="max-w-4xl mx-auto space-y-6">
      <!-- Job Details -->
      <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
        <h2 class="text-lg font-semibold text-gray-100 mb-4">Job Details</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-sm font-medium text-gray-400 mb-1">Status</h3>
            <div class="flex items-center gap-2">
              <span class="<%= @scheduled_job.active? ? 'bg-green-900 text-green-200' : 'bg-gray-900 text-gray-400' %> px-2 py-1 text-xs rounded-full">
                <%= @scheduled_job.active? ? 'Active' : 'Inactive' %>
              </span>
              <% if @scheduled_job.status.present? && @scheduled_job.status != 'pending' %>
                <span class="<%= status_badge_class(@scheduled_job.status) %> px-2 py-1 text-xs rounded-full">
                  <%= @scheduled_job.status.titleize %>
                </span>
              <% end %>
            </div>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-400 mb-1">Schedule</h3>
            <code class="bg-gray-700 px-2 py-1 rounded text-sm"><%= @scheduled_job.cron_expression %></code>
          </div>

          <% if @scheduled_job.next_run_at %>
            <div>
              <h3 class="text-sm font-medium text-gray-400 mb-1">Next Run</h3>
              <p class="text-gray-200"><%= @scheduled_job.next_run_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              <p class="text-xs text-gray-500"><%= time_ago_in_words(@scheduled_job.next_run_at) %> from now</p>
            </div>
          <% end %>

          <% if @scheduled_job.last_run_at %>
            <div>
              <h3 class="text-sm font-medium text-gray-400 mb-1">Last Run</h3>
              <p class="text-gray-200"><%= @scheduled_job.last_run_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              <p class="text-xs text-gray-500"><%= time_ago_in_words(@scheduled_job.last_run_at) %> ago</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Prompt Template -->
      <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
        <h2 class="text-lg font-semibold text-gray-100 mb-4">Prompt Template</h2>
        <div class="bg-gray-900 rounded-lg p-4">
          <pre class="text-gray-200 text-sm whitespace-pre-wrap font-mono"><%= @scheduled_job.prompt_template %></pre>
        </div>
      </div>

      <!-- Job History -->
      <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
        <h2 class="text-lg font-semibold text-gray-100 mb-4">Job History</h2>

        <div class="space-y-3">
          <% if @scheduled_job.last_run_at %>
            <div class="flex items-center gap-3 p-3 bg-gray-700 rounded-lg">
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <div>
                <p class="text-gray-200">Last executed successfully</p>
                <p class="text-xs text-gray-500"><%= time_ago_in_words(@scheduled_job.last_run_at) %> ago</p>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <p class="text-gray-500">No execution history yet</p>
              <p class="text-xs text-gray-600 mt-1">The job will run according to its schedule</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
