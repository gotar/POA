<div data-controller="toast" class="bg-gray-900 border border-gray-700 rounded-xl px-4 py-3 text-sm shadow-xl">
  <% if type.to_s == "success" %>
    <div class="text-green-300"><%= message %></div>
  <% elsif type.to_s == "error" %>
    <div class="text-red-300"><%= message %></div>
  <% else %>
    <div class="text-gray-200"><%= message %></div>
  <% end %>
</div>
