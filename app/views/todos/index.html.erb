<% content_for :title, "TODOs - #{@project.name}" %>

<div class="min-h-screen flex flex-col">
  <header class="bg-gray-800 border-b border-gray-700 px-4 py-3 flex items-center gap-3 sticky top-0 z-10">
    <%= link_to @project, class: "text-gray-400 hover:text-gray-200" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="text-xl font-bold text-gray-100">TODOs</h1>
    <div class="ml-auto text-xs text-gray-400"><%= @project.name %></div>
  </header>

  <main class="flex-1 overflow-y-auto p-4">
    <div class="max-w-3xl mx-auto space-y-4">
      <div class="bg-gray-800 rounded-xl p-4 border border-gray-700">
        <h2 class="text-sm font-semibold text-gray-300 mb-3">Add TODO</h2>
        <%= turbo_frame_tag "todo_form" do %>
          <%= render "todos/form", project: @project, todo: @todo %>
        <% end %>
      </div>

      <div class="bg-gray-800 rounded-xl p-4 border border-gray-700">
        <div class="flex items-center justify-between mb-3">
          <h2 class="text-sm font-semibold text-gray-300">All TODOs</h2>
          <div class="text-xs text-gray-500"><%= pluralize(@todos.count, "item") %></div>
        </div>

        <div id="todos_list" class="space-y-2">
          <%= render partial: "todos/todo", collection: @todos, locals: { project: @project } %>

          <% if @todos.empty? %>
            <p class="text-gray-500 text-sm">No todos yet</p>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
